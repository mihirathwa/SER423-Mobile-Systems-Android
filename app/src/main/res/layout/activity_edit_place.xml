<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_edit_place"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/colorScrollView"
    tools:context="edu.asu.msse.mrathwa.placeman.EditPlaceActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/AEP_llMain"
        android:background="@color/colorLayout"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:orientation="vertical">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="@dimen/table_item_width"
                    android:layout_height="wrap_content"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:layout_weight="0.5"
                    android:text="Name: " />

                <EditText
                    android:layout_width="@dimen/table_item_width"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:inputType="textAutoComplete"
                    android:id="@+id/AEP_etName"/>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="@dimen/table_item_width"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:text="Description: " />

                <EditText
                    android:layout_width="@dimen/table_item_width"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:inputType="textAutoComplete|textMultiLine"
                    android:id="@+id/AEP_etDescription"/>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="@dimen/table_item_width"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:text="Category: " />

                <EditText
                    android:layout_width="@dimen/table_item_width"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:inputType="textAutoComplete"
                    android:id="@+id/AEP_etCategory"/>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="@dimen/table_item_width"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:text="Address Title: " />

                <EditText
                    android:layout_width="@dimen/table_item_width"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:inputType="textAutoComplete"
                    android:id="@+id/AEP_etAddressTitle"/>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="@dimen/table_item_width"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:text="Address Street: " />

                <EditText
                    android:layout_width="@dimen/table_item_width"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:inputType="textAutoComplete|textPostalAddress|textMultiLine"
                    android:id="@+id/AEP_etAddressStreet"/>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="@dimen/table_item_width"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:text="Elevation: " />

                <EditText
                    android:layout_width="@dimen/table_item_width"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:inputType="numberDecimal"
                    android:id="@+id/AEP_etElevation"/>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="@dimen/table_item_width"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:text="Latitude: " />

                <EditText
                    android:layout_width="@dimen/table_item_width"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:inputType="numberDecimal"
                    android:id="@+id/AEP_etLatitude"/>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="@dimen/table_item_width"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:text="Longitude: " />

                <EditText
                    android:layout_width="@dimen/table_item_width"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:inputType="numberDecimal"
                    android:id="@+id/AEP_etLongitude"/>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="@dimen/table_item_width"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:text="Image: " />

                <EditText
                    android:layout_width="@dimen/table_item_width"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:inputType="text"
                    android:id="@+id/AEP_etImage"/>

            </TableRow>

        </TableLayout>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:padding="10dp"
            android:id="@+id/AEP_spinPlaces">
        </Spinner>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:id="@+id/AEP_tvDistance" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:id="@+id/AEP_btnSave"
                android:text="Save"
                android:onClick="AEP_SaveOnClick"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center"
                android:id="@+id/AEP_btnRemove"
                android:text="Remove"
                android:onClick="AEP_RemoveOnClick"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
